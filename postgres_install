user@user:~$ sudo sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list'

user@user:~$ wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | sudo apt-key add -

user@user:~$ sudo apt-get update

user@user:~$ sudo apt-get -y install postgresql

user@user:~$ systemctl start postgresql.service

user@user:~$ systemctl status postgresql.service

user@user:~$ systemctl enable postgresql.service

user@user:~$ sudo -i -u postgres

postgres@user:~$ psql

postgres=# create user testuser with password '12345';

postgres=# create database test;

postgres=# grant all privileges on database test to testuser;

postgres=# \q

postgres@Estiak:~$ exit
